Fifa<-read.csv("data.csv",header=T,stringsAsFactors = F)
library(ggrepel)

library(gghighlight)

library(fmsb)

library(reshape2)

library(colorspace)

library(purrr)

library(forcats)

library(dplyr)

library(plotly)

library(stringr)

library(leaflet)

